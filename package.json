{
  "name": "xcandy",
  "version": "0.0.4",
  "main": "dist/index.js",
  "description": "A UI framework for taro.js",
  "scripts": {
    "release": "bash scripts/release.sh",
    "test": "echo \"no test\"",
    "eslint": "eslint --cache --ext .js,.jsx,.ts.tsx src/",
    "ui:build": "cross-env TARO_BUILD_TYPE=ui taro build --ui",
    "ui:ci": "TARO_BUILD_TYPE=ui taro build --ui",
    "build:weapp": "taro build --type weapp",
    "build:swan": "taro build --type swan",
    "build:alipay": "taro build --type alipay",
    "build:tt": "taro build --type tt",
    "build:h5": "taro build --type h5",
    "build:rn": "taro build --type rn",
    "dev:weapp": "npm run build:weapp -- --watch",
    "dev:swan": "npm run build:swan -- --watch",
    "dev:alipay": "npm run build:alipay -- --watch",
    "dev:tt": "npm run build:tt -- --watch",
    "dev:h5": "npm run build:h5 -- --watch",
    "dev:rn": "npm run build:rn -- --watch"
  },
  "author": "love@onelong.org",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/loveonelong/xcandy"
  },
  "keywords": [
    "taro",
    "react",
    "ui framework",
    "weapp"
  ],
  "files": [
    "dist",
    "@types",
    "src/**/interface.ts",
    "src/**/*.d.ts"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --quiet --cache --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@tarojs/components": "1.2.4",
    "@tarojs/router": "1.2.4",
    "@tarojs/taro": "1.2.4",
    "@tarojs/taro-alipay": "1.2.4",
    "@tarojs/taro-h5": "1.2.4",
    "@tarojs/taro-swan": "1.2.4",
    "@tarojs/taro-tt": "^1.2.1",
    "@tarojs/taro-weapp": "1.2.4",
    "classnames": "^2.2.6",
    "dayjs": "^1.7.8",
    "nerv-devtools": "^1.3.9",
    "nervjs": "^1.3.9"
  },
  "devDependencies": {
    "@tarojs/plugin-babel": "1.2.4",
    "@tarojs/plugin-csso": "1.2.4",
    "@tarojs/plugin-sass": "1.2.4",
    "@tarojs/plugin-uglifyjs": "1.2.4",
    "@tarojs/webpack-runner": "1.2.4",
    "@types/react": "^16.4.6",
    "@types/webpack-env": "^1.13.6",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-jsx-stylesheet": "^0.6.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "commitlint": "^7.2.1",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-taro": "1.2.4",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-react": "^7.8.2",
    "eslint-plugin-taro": "1.2.4",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "^21.0.2"
  }
}
